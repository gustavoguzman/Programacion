// CicloRepetitivo.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;

void main()
{int i, n;
 cout<< "ingrese n: ";
 cin>>n;
 for (i=2; i<=n; i=i+2)
	cout<<i<<"\t";
    cout<<"\n\n";
 i=2;
 while(i<=n)
   {cout<<i<<"\t";
    i=i+2;
   }
 i=2;
 cout<<"\n\n";
 do
   {cout<<i<<"\t";
    i=i+2;
   }while(i<=n);
 getch();
}

